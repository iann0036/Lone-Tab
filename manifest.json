{
  "name": "Lone Tab",
  "short_name": "Lone Tab",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Ian Mckay",
  "description": "A new, unique session for every tab opened.",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  },
  "background":  {
    "scripts": ["common.js","main.js"]
  },
  "content_scripts": [
      {
          "matches": ["*://*/*"],
          "js": ["content.js"],
          "run_at": "document_start"
      }
  ],
  "web_accessible_resources": [
      "inject.js",
      "common.js"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "*://*/*"
  ]
}
